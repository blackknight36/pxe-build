cd /dev
rm /dev/cdrom 2>/dev/null
devices=`ls [hs]d?`;
for h in $devices
  do
    drive=`cat /proc/partitions | grep $h`;
    if [ -z "$drive" ]; then
      media=`cat /sys/block/$h/device/media`;
      if [ "$media" = "cdrom" ]; then
        ln -s /dev/$h /dev/cdrom ;
      fi
    fi
  done
devices=`ls sr? 2>/dev/null `;
for h in $devices
  do
    media=`cat /sys/block/$h/device/model | cut -b 1-3`;
    if [ "$media" = "DVD" ]; then
      ln -s /dev/$h /dev/cdrom ;
    fi
  done
